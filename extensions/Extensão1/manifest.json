{
    "manifest_version": 2,
  
    "name": "Twitter search",
    "description": "Essa extens√£o realiza uma busca por twittes no twitter",
    "version": "1.0",
  
    "browser_action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html"
    },
    "permissions": [
      "activeTab",
      "https://api.twitter.com/1.1/search/"
    ],
    "content_scripts": [
      {
        "matches": [
          "<all_urls>"
        ],
        "js": ["popup.js"]
      }
    ]
  }